<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_gfunosas.ticket_tree_view" model="ir.ui.view">
        <field name="name">ticket.tree.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="name"/>
                <field name="description"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_gfunosas.ticket_form_view" model="ir.ui.view">
        <field name="name">ticket.form.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket Form">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,done"/>
                    <button string="Assign" name="set_assigned" type="object"
                            states="new"/>
                    <button string="Progress" name="set_progress" type="object"
                            states="assigned"/>
                    <button string="Waiting" name="set_waiting" type="object"
                            states="assigned,progress"/>
                    <button string="Done" name="set_done" type="object"
                            states="assigned,progress,waiting"/>
                    <button string="Cancel" name="set_cancelled" type="object"
                            states="assigned,progress,waiting,done"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            Ticket # <field name="name" class="on_inline"/>
                        </h1>
                    </div>
                    <group name="main">
                        <group name="left">
                            <field name="user_id"/>
                            <field name="date"/>
                            <field name="state"/>
                        </group>
                        <group name="right">
                            <field name="assigned"/>
                            <field name="date_due"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Main">
                            <group string="Description">
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Quality">
                            <group string="Corrective Action">
                                <field name="corrective_action" nolabel="1"/>
                            </group>
                            <group string="Preventive Action">
                                <field name="preventive_action" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_gfunosas.ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
        Click to create a new Ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_root_menu"
                name="Helpdesk" sequence="10"/>

    <menuitem id="helpdesk_ticket_main_menu"
                name="Helpdesk" parent="helpdesk_root_menu" sequence="10"/>

    <menuitem id="helpdesk_ticket_menu"
                name="Tickets" parent="helpdesk_ticket_main_menu"
                action="helpdesk_gfunosas.ticket_action" sequence="10"/>
</odoo>