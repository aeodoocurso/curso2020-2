<odoo>

<record id="helpdek_category" model="ir.module.category">
    <field name="name">Helpdesk</field>
</record>

<record id="helpdesk_groups_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="helpdek_category"/>
    <field name="comment">
        Normal user.
    </field>
</record>

<record id="helpdesk_groups_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id" ref="helpdek_category"/>
    <field name="implied_ids" eval="[(4, ref('helpdesk_groups_user'))]"/>
    <field name="comment">
        Manager
    </field>
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
</record>

</odoo>